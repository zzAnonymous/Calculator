<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_sys1"
        android:hint=""
        android:layout_marginTop="26dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转换"
        android:textColor="#000"
        android:textSize="40sp"
        android:id="@+id/tv_sys1"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignBaseline="@+id/et_sys1"
        android:layout_alignBottom="@+id/et_sys1"
        android:layout_toRightOf="@+id/et_sys1"
        android:layout_toEndOf="@+id/et_sys1" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_sys2"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignBaseline="@+id/tv_sys1"
        android:layout_alignBottom="@+id/tv_sys1"
        android:layout_toRightOf="@+id/tv_sys1"
        android:layout_toEndOf="@+id/tv_sys1" />

    <EditText
        android:id="@+id/et_sys_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/et_sys2"
        android:layout_alignLeft="@+id/tv_sys1"
        android:layout_alignStart="@+id/tv_sys1"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/tv_sys_show"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/et_sys_num"
        android:layout_alignLeft="@+id/et_sys_num"
        android:layout_alignStart="@+id/et_sys_num"
        android:layout_alignRight="@+id/et_sys_num"
        android:layout_alignEnd="@+id/et_sys_num" />

    <Button
        android:id="@+id/button_syschange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sys_show"
        android:layout_marginTop="66dp"
        android:text="change"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:textSize="30sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_sys1"
        android:layout_alignStart="@+id/et_sys1"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="待转换："
        android:layout_alignTop="@+id/et_sys_num" />

    <TextView
        android:id="@+id/textView6"
        android:textSize="30sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/tv_sys_show"
        android:text="结果：" />


</RelativeLayout>